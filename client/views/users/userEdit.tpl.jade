.sixteen.wide.column
  h2 Edit your profile
  form#updateUserForm.ui.form
    .field 
      label(for="realname") Your name:
      input(type="text" name="realname" value="#{getRealname}")
    .field
      label(for="username") Username:
      input(type="text" name="username" value="#{getUsername}")
    .field
      label(for="email") Email:
      input(type="text" name="email" value="#{getEmail}")
    .field
      label(for="bio") Bio:
      textarea(name="bio" rows="2") #{getBio}
    button(type="submit").ui.button.primary Save changes
  h2 Change your password
  form#updateUserPasswordForm.ui.form
    .field
      label(for="oldPassword") Current password:
      input(type="password" name="oldPassword")
    .field
      label(for="newPassword") New password:
      input(type="password" name="newPassword")
    button(type="submit").ui.button.primary Change password