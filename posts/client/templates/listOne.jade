template(name="postListOne")
  a.item(href="/p/#{slug}")
    .content
      .header #{title}
      //- really weird, why do i have to use spacebars syntax here?
      .description {{trimBody body}} 
      .extra
        .right.floated
          span.gray(style="margin-right: 10px;") #{createdAt}
          a.ui.red.tag.label(href="/t/#{tag}") #{tag}
