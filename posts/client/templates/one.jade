template(name="postOne")
  //- Main content
  .sixteen.wide.column
    if isAuthor author
      .ui.message.
        This is your post. Would you like to <a href="/p/#{slug}/edit">edit</a> 
        or <a href="#" id="delete-button">delete</a> it?
    if isAdminButNotAuthor author
      .ui.message.
        You can <a href="#" id="delete-button">delete</a> this post.
    h1 #{title}
      span.post-info
        a(href="/a/#{author}")
          img(src="{{getGravatarUrl author}}").ui.avatar.image
          span #{author}
        span.ui.label #{createdAt}
    if disclaimer
      .ui.red.icon.message
        i.warning.icon
        .content
          .header Disclaimer
          p #{disclaimer}
    p.ns.post 
      +markdown
        #{body}
    br
    a(href="/t/#{tag}").ui.red.tag.label #{tag}
    +disqus