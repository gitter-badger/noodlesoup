template(name="staticAbout")
  .sixteen.wide.column
    h1.ui.center.aligned.icon.header
      i.users.icon
      .content
        | Hey, we're Noodlesoup!
        .sub.header
          | We are a creative bunch of people, really.
    .ui.items
      each users
        .item
          .ui.tiny.image
            img(src="{{getGravatarUrl emails}}")
          .content
            .header #{username}
              small #{profile.realname}
            .description
              p #{profile.bio}